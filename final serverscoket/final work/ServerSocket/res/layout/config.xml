<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/configeditText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/configeditText1"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:hint="Enter The Number of Floors"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ViewBtn"
        android:layout_marginTop="24dp"
        android:onClick="Save"
        android:text="Save" />

    <EditText
        android:id="@+id/configeditText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Enter The Number of Slots"
        android:inputType="number" />

    <Button
        android:id="@+id/ViewBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/configeditText2"
        android:layout_marginTop="40dp"
        android:onClick="view"
        android:text="View" />

</RelativeLayout>
